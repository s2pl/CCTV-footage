<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <security>
            <access sslFlags="Ssl" />
        </security>
        <handlers>
            <add name="Python FastCGI" 
                 path="*" 
                 verb="*" 
                 modules="FastCgiModule" 
                 scriptProcessor="C:\inetpub\wwwroot\creatathon-miniapp\Backend\venv\Scripts\python.exe|C:\inetpub\wwwroot\creatathon-miniapp\Backend\venv\Lib\site-packages\wfastcgi.py" 
                 resourceType="Unspecified" 
                 requireAccess="Script" />
        </handlers>
        <rewrite>
            <rules>
                <rule name="HTTP to HTTPS redirect" stopProcessing="true">
                    <match url="(.*)" />
                    <conditions>
                        <add input="{HTTPS}" pattern="off" ignoreCase="true" />
                    </conditions>
                    <action type="Redirect" redirectType="Permanent" url="https://{HTTP_HOST}/{R:1}" />
                </rule>
                <rule name="Static Files" stopProcessing="true">
                    <conditions>
                        <add input="{REQUEST_FILENAME}" matchType="IsFile" />
                    </conditions>
                    <action type="None" />
                </rule>
                <rule name="Configure Python" stopProcessing="true">
                    <match url="(.*)" ignoreCase="false" />
                    <conditions>
                        <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
                    </conditions>
                    <action type="Rewrite" url="manage.py" />
                </rule>
            </rules>
        </rewrite>
        <fastCgi>
            <application fullPath="C:\inetpub\wwwroot\creatathon-miniapp\Backend\venv\Scripts\python.exe" 
                        arguments="C:\inetpub\wwwroot\creatathon-miniapp\Backend\venv\Lib\site-packages\wfastcgi.py" 
                        maxInstances="4" 
                        idleTimeout="1800">
                <environmentVariables>
                    <environmentVariable name="PYTHONPATH" value="C:\inetpub\wwwroot\creatathon-miniapp\Backend" />
                    <environmentVariable name="DJANGO_SETTINGS_MODULE" value="config.settings" />
                    <environmentVariable name="WSGI_HANDLER" value="django.core.wsgi.get_wsgi_application()" />
                    <environmentVariable name="HTTPS" value="on" />
                    <environmentVariable name="wsgi.url_scheme" value="https" />
                </environmentVariables>
            </application>
        </fastCgi>
    </system.webServer>
</configuration> 