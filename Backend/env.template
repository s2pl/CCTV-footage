# Basic Environment Variables for Docker
SECRET_KEY=your-secret-key-here
DB_NAME=rstp
DB_USER=cctv-db
DB_PASSWORD=your-database-password-here
DB_HOST=localhost
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
JWT_SECRET_KEY=your-jwt-secret-key

# GCP Cloud Storage Configuration
# Set to True to use GCP Cloud Storage instead of local storage
GCP_STORAGE_USE_GCS=False
# Your GCP project ID
GCP_STORAGE_PROJECT_ID=your-gcp-project-id
# Your GCP Storage bucket name
GCP_STORAGE_BUCKET_NAME=your-bucket-name
# Path to your GCP service account credentials JSON file (optional - can use environment variable instead)
GCP_STORAGE_CREDENTIALS_PATH=/path/to/your/service-account-key.json