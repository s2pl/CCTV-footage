# ========================================
# CCTV Local Recording Client Configuration
# ========================================

# Backend API Configuration
# URL of the Django backend API server
BACKEND_API_URL=http://localhost:8000

# Client Authentication (REQUIRED)
# CLIENT_TOKEN: Get this from Django Admin -> Local Recording Clients -> Create/View Client
# The token is automatically generated when you create a new client in admin
# Example: abc123xyz456...
CLIENT_TOKEN=7oFIZRC0y9uECFXjBUlZqV_Jx8_vFD7G3RLNzY5MrSY


# CLIENT_ID: Optional UUID of the LocalRecordingClient record
# You can find this in Django Admin after creating the client
# This is usually auto-detected but can be set manually
CLIENT_ID=

# ========================================
# GCP Cloud Storage Configuration
# ========================================
# GCP credentials JSON file path (relative to install directory or absolute path)
GCP_CREDENTIALS_PATH=

# GCP Storage bucket name (from settings.py: cctv_feed)
GCP_BUCKET_NAME=cctv_feed

# GCP Project ID (from settings.py: learningdevops-455404)
GCP_PROJECT_ID=learningdevops-455404

# ========================================
# Recording Settings
# ========================================
# Base directory for storing recordings
RECORDING_BASE_DIR=./recordings

# Delete local files after successful GCP upload
CLEANUP_AFTER_UPLOAD=true

# Number of days to keep local recordings before cleanup
KEEP_LOCAL_DAYS=1

# Maximum number of simultaneous recordings
MAX_CONCURRENT_RECORDINGS=4

# ========================================
# Sync Settings
# ========================================
# Interval in seconds to sync schedules from backend
SYNC_INTERVAL_SECONDS=30

# Interval in seconds to send heartbeat to backend
HEARTBEAT_INTERVAL_SECONDS=60

# Maximum number of retry attempts for API calls
MAX_RETRY_ATTEMPTS=5

# ========================================
# System Settings
# ========================================
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ========================================
# Advanced Settings (from settings.py)
# ========================================
# Timezone for recording timestamps
TIME_ZONE=Asia/Kolkata

# GCP Storage Settings (if different from defaults)
GCP_STORAGE_CLEANUP_LOCAL=true
GCP_STORAGE_AUTO_UPLOAD=true
GCP_STORAGE_UPLOAD_TIMEOUT=600
GCP_STORAGE_RETRY_ATTEMPTS=3
GCP_SIGNED_URL_EXPIRATION=120

# ========================================
# Notes:
# ========================================
# 1. CLIENT_TOKEN is REQUIRED - Get it from Django Admin
# 2. To get CLIENT_TOKEN:
#    - Go to Django Admin -> CCTV -> Local Recording Clients
#    - Create a new client or view existing client
#    - Copy the client_token value
# 3. To get CLIENT_ID:
#    - Same location in Django Admin
#    - Copy the UUID (id field)
# 4. GCP credentials file should be downloaded from Google Cloud Console
#    and placed in a secure location with appropriate permissions
