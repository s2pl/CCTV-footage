# ============================================
# Local Client AWS S3 Configuration
# ============================================
# Copy this file to .env and fill in your configuration

# ============================================
# Backend API Configuration
# ============================================
BACKEND_API_URL=http://localhost:8000
CLIENT_TOKEN=your_client_token_here
CLIENT_ID=

# ============================================
# Cloud Storage Backend Selection
# ============================================
# Options: 'AWS', 'GCP', or 'BOTH'
CLOUD_STORAGE_BACKEND=AWS

# ============================================
# AWS S3 Configuration
# ============================================
# AWS Credentials
AWS_ACCESS_KEY_ID=your_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_secret_access_key_here
AWS_SESSION_TOKEN=  # Optional: for temporary credentials

# AWS Region and Bucket
AWS_REGION_NAME=ap-south-1
AWS_BUCKET_NAME=cctv-footage-bucket
AWS_S3_SIGNATURE_VERSION=s3v4

# ============================================
# GCP Configuration (Legacy/Backup)
# ============================================
GCP_CREDENTIALS_PATH=
GCP_BUCKET_NAME=
GCP_PROJECT_ID=

# ============================================
# Recording Settings
# ============================================
RECORDING_BASE_DIR=./recordings
CLEANUP_AFTER_UPLOAD=true
KEEP_LOCAL_DAYS=1

# ============================================
# Sync Settings
# ============================================
SYNC_INTERVAL_SECONDS=30
HEARTBEAT_INTERVAL_SECONDS=60
MAX_RETRY_ATTEMPTS=5

# ============================================
# System Settings
# ============================================
LOG_LEVEL=INFO
MAX_CONCURRENT_RECORDINGS=4

